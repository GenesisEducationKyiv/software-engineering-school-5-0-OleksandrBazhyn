{
  "name": "weather-service",
  "version": "1.0.0",
  "description": "Microservice for weather data",
  "license": "ISC",
  "author": "Oleksandr Bazhyn",
  "type": "module",
  "main": "dist/src/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/app.js",
    "dev": "tsx src/app.ts",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration --detectOpenHandles",
    "lint": "eslint . --ext .ts,.tsx,.cts,.mts,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.cts,.mts,.js --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "eslint-plugin-prettier": "^5.5.1",
    "express": "^5.1.0",
    "prettier": "^3.6.2",
    "tsc": "^2.0.4",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "winston": "^3.17.0",
    "express": "^5.1.0",
    "redis": "^4.7.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  }
}
