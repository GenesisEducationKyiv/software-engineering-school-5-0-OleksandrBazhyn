{
  "name": "subscription-service",
  "version": "1.0.0",
  "description": "Microservice for managing user subscriptions",
  "license": "ISC",
  "author": "Oleksandr Bazhyn",
  "type": "module",
  "main": "dist/src/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/app.js",
    "dev": "tsx src/app.ts",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration --detectOpenHandles",
    "lint": "eslint . --ext .ts,.tsx,.cts,.mts,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.cts,.mts,.js --fix",
    "format": "prettier --write .",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "ts-jest": "^29.2.5",
    "winston": "^3.17.0"
  }
}
